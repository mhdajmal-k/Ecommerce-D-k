<%- include ("../partilas/admin") -%>
<div class="container mt-4">
    <h1>Ratings</h1>
    <div class="table-responsive container">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Product ID</th>
                    <th>User ID</th>
                    <th>Rating</th>
                    <th>Review</th>
                    <th>Created At</th>
                </tr>
            </thead>
            <tbody>
                <% if (review.length>0) { %>
                 
                    <% review.forEach(function(rating) { %>
                        <tr>
                            <td><%= rating.productId.productName %></td>
                            <td>
                                <% if (rating.userId && rating.userId.username) { %>
                                    <%= rating.userId.username %>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td><%= rating.rating %></td>
                            <td><%= rating.review %></td>
                            <td><%= rating.createdAt.toLocaleString() %></td>
                        </tr>
                    <% }); %>
              
                <% } else { %>
                 
                    <tr>
                        <td colspan="5" class="text-center">No Review</td>
                    </tr>
                <% } %>
               
                
                
            </tbody>
            
        </table>
    </div>
</div>
