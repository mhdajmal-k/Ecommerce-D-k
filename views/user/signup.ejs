    <script>
        const username = document.getElementById("username");
        const email = document.getElementById("email");
        const mobile = document.getElementById("mobile");
        const password = document.getElementById("password");
        const password_conform = document.getElementById("password_conform");
        const user_name_error = document.getElementById("username_error");
        const email_error = document.getElementById("email_error");
        const mobile_error = document.getElementById("mobile_error");
        const password_error = document.getElementById("password_error");
        const password_conform_error = document.getElementById("password_conform_error");

        function validateName() {
            const name_value = username.value;
            const nameRegex = /^[a-zA-Z\s\-',.]+$/;
    const isValidName = nameRegex.test(name_value );

            if (name_value.trim() === "") {
                user_name_error.style.display = "block";
                user_name_error.innerHTML = "Please Enter a valid Name.";
            }else if(!isValidName){
                user_name_error.style.display = "block";
                user_name_error.innerHTML = "Please Enter a valid Name.";
            }else if(name_value>30){
                user_name_error.style.display = "block";
                user_name_error.innerHTML = "Please Enter a valid Name.";
            }
             else {
                user_name_error.style.display = "none";
                user_name_error.innerHTML = "";
            }
        }

        function validatemobile() {
            const mobileNumber = mobile.value.trim();
            const mobilePattern = /^\d{10}$/
            if (mobileNumber.length < 10) {
                mobile_error.innerHTML = "Enter a valid mobile number (at least 10 digits)";
                mobile_error.style.display = "block";
            }
            else if (!mobilePattern.test(mobileNumber)) {
                mobile_error.innerHTML = "Enter a valid mobile number ";
                mobile_error.style.display = "block";
            }
            else {
                mobile_error.style.display = "none";
                mobile_error.innerHTML = "";
            }
        }

        function validateEmail() {
            const Email = email.value.trim();
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(Email) || Email === "") {
                email_error.innerHTML = "Enter a valid email ";

            } else {
                email_error.style.display = "none";
                email_error.innerHTML = "";

            }
        }

        function validate_password() {
            const Password = password.value.trim();
            const pass = /^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#\$%\^&\*])(?=.{8,})/;
            if (!pass.test(Password) || Password === "") {
                password_error.innerHTML = "Enter a Strong Password eg: Strong@1234";
                password_error.style.display = "block";
            } else {
                password_error.style.display = "none";
                password_error.innerHTML = "";
            }
        }

        function conformPassword() {
            const passwordValue = password.value;
            const confirmPasswordValue = password_conform.value;

            if (passwordValue !== confirmPasswordValue) {

                password_conform_error.innerHTML = "Passwords must match";
                password_conform_error.style.display = "block";
            } else {
                password_conform_error.style.display = "none";
                password_conform_error.innerHTML = "";
            }
        }

        function Check_all(e) {
            validateEmail()
            validate_password()
            validatemobile()
            validateName()
            if (password_conform_error.innerHTML || password_error.innerHTML || email_error.innerHTML || user_name_error.innerHTML) {
                e.preventDefault()
            } else {



            }
        }





    </script>
