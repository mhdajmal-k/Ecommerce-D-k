        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@latest"></script>
        <script>
            function decrementQuantity(subtotal, quantity, itemid, newQuantity, userId, productId, size, index, sellingPrice) {
                const quntaity = document.getElementById(`incrementnewQuantity${index}`).innerText
                const updatingQuantity = parseInt(quntaity) + parseInt(newQuantity)
                const updateQty = document.getElementById(`incrementnewQuantity${index}`)
                const subTotal = document.getElementById(`Subtotal${index}`)
                const total = document.getElementById('grandTotal')
                const itemsTotal = document.getElementById('total')


                $.ajax({
                    url: "/decrementQuantity",
                    method: "POST",
                    data: {
                        subtotal: subtotal,
                        quantity: quntaity,
                        itemid: itemid,
                        updatingQuantity: updatingQuantity,
                        userId: userId,
                        productId: productId,
                        size: size,
                        index: index
                    },
                    success: function (response) {
                        if (response.status === "out of stock") {
                            Swal.fire({
                                title: "<span style='color: red;'>Out Of Stock</span>",
                                html: "<span style='color: blue;'>Please keep in touch with us</span>",
                                icon: "error",
                                timer: 2000,
                                showConfirmButton: false
                            });
                        } else if (response.status === "maximumQuantity") {

                            Swal.fire({
                                title: "<span style='color: red;'>Maximum Quantity Reached</span>",
                                html: "<span style='color: blue;'>You have reached the maximum allowed quantity</span>",
                                icon: "warning",
                                timer: 2000,
                                showConfirmButton: false
                            });
                        } else if (response.status === "success") {


                            updateQty.innerHTML = updatingQuantity;


                            subTotal.innerHTML = updatingQuantity * sellingPrice;

                            total.innerText = response.total
                            itemsTotal.innerText = response.total

                        }
                    },
                    error: function (error) {
                        console.log(error);

                    }
                });
            }
            function removeItem(itemId) {


                Swal.fire({
                    title: "<span style='color: red;'>Are you Sure</span>",
                    html: "<span style='color: black;'>Do you want to remove this item</span>",

                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.value == true) {
                        $.ajax({
                            url: "/removeItem",
                            method: "get",
                            data: {
                                itemId: itemId,

                            }, success: (response) => {

                                if (response.status == true) {
                                    Swal.fire({
                                        title: "<span style='color: red;'>Removed</span>",
                                        html: "<span style='color: blue;'The item Has been Removed</span>",
                                        icon: "success",
                                        timer: 1000,
                                    });
                                }
                                setTimeout(() => {
                                    location.href = "/cart"
                                }, 1200);

                            }

                        })
                    }

                });


            }


        </script>