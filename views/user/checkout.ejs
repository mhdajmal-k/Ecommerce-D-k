        <script>


            document.getElementById("placeOrderButton").addEventListener("click", () => {
                const userCartId = "<%= userCart._id %>";

                if (userCartId)
                    placeOrder(userCartId);
            })

            function placeOrder(cartId) {
                const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked');
                const selectedPayment = document.querySelector('input[name="selectedPayment"]:checked');

                if (selectedPayment === null || selectedPayment === undefined) {
                    Swal.fire({
                        title: "<span style='color: red;'>Please select payment option</span>",
                        html: "<span style='color: blue;'>For ordering, please select a payment option</span>",
                        icon: "warning",
                        timer: 2000
                    });
                    return;
                }

                const paymentOption = selectedPayment.value; // Get the value of the selected payment option



                $.ajax({

                    url: "/placeOrder",
                    method: "post",
                    data: {
                        cartId: cartId,
                        addressId: selectedAddress.value,
                        paymentOption: paymentOption
                    }, success: (response) => {
                        if (response.status == "invalid user") {
                            location.href = "/login"
                        } else if (response.status == "blocked product") {
                            Swal.fire({
                                title: "<span style='color: red;'>Error</span>",
                                html: "<span style='color: blue;'>We're sorry, but the product you're trying to order is currently unavailable.</span>",
                                icon: "error",
                                timer: 3000
                            });
                            setTimeout(() => {
                                location.href = "/shop"
                            }, 3100);
                        }
                        else if (response.status == "invalid product") {
                            Swal.fire({
                                title: "<span style='color: red;'>Product not available</span>",
                                html: "<span style='color: blue;'>Please consider exploring other products in our catalog</span>",
                                icon: "error",
                                timer: 3000
                            });
                            setTimeout(() => {
                                location.href = "/shop"
                            }, 3100);
                        }
                        else if (response.status == "out of stock") {
                            Swal.fire({
                                title: "<span style='color: red;'>Oops!</span>",
                                html: "<span style='color: blue;'>Out Of Stock,Please keep in touch with us</span>",
                                icon: "warning",
                                timer: 3000
                            });
                            setTimeout(() => {
                                location.href = "/shop"
                            }, 3100);
                        } else if (response.status == "order placed") {
                            Swal.fire({
                                title: "<span style='color: green;'>Order Placed</span>",
                                html: "<span style='color: blue;'>Our order have been Placed keep shop with us</span>",
                                icon: "success",
                                timer: 3000
                            });
                            setTimeout(() => {
                                location.href = "/orderSuccess"
                            }, 3100);
                        }
                        //     }else if(response.status=="empty_cart"){
                        //         Swal.fire({
                        //     title: "<span style='color: red;'>Cart is empty</span>",
                        //     html: "<span style='color: black;'>cart is empty keep shop</span>",
                        //     icon: "success",
                        //     timer: 3000
                        // });
                        //     }

                    },
                    error: (xhr, status, error) => {
                        console.error(xhr.responseText); // Log the error message to the console
                        Swal.fire({
                            title: "<span style='color: red;'>Error</span>",
                            html: "<span style='color: blue;'>An error occurred while placing the order</span>",
                            icon: "error",
                            timer: 2000
                        });
                    }
                });
            }
            function removeItem(itemId) {


                Swal.fire({
                    title: "<span style='color: red;'>Are you Sure</span>",
                    html: "<span style='color: black;'>Do you want to remove this item</span>",

                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.value == true) {

                        $.ajax({
                            url: "/removeItem",
                            method: "get",
                            data: {
                                itemId: itemId,

                            }, success: (response) => {

                                if (response.status == true) {
                                    Swal.fire({
                                        title: "<span style='color: red;'>Removed</span>",
                                        html: "<span style='color: blue;'The item Has been Removed</span>",
                                        icon: "success",
                                        timer: 1000,
                                    });
                                }
                                setTimeout(() => {
                                    location.href = "/checkOut"
                                }, 1200);

                            }

                        })
                    }


                });


            }

        </script>