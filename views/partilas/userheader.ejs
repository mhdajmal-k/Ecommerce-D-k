    <script>
       $(document).ready(function() {
    const searchProductInput = $("#searchProduct");

    function debounce(func, delay) {
        let timer;
        return function() {
            const context = this;
            const args = arguments;
            clearTimeout(timer);
            timer = setTimeout(function() {
                func.apply(context, args);
            }, delay);
        };
    }

    function searchProduct(product) {
        $.ajax({
            url: "/searchProducts",
            method: "post",
            data: {
                productData: product
            },
            success: function(response) {
                if(response.status) {
                   
                    displaySearchProduct(response.searchingProduct);
                } else {
                    displaySearchError(response.message);
                    setTimeout(() => {
                        
                        document.getElementById("searchResult").style.display="none"
                    }, 2000);
                }
            },
            error: function(xhr, status, error) {
                displaySearchError("Error fetching products");
            }
        });
    }

    function displaySearchProduct(products) {
        let resultHtml = '';
        if (products.length > 0) {
            products.forEach(function(product) {

                resultHtml += '<div class="product" data-id="' + product._id + '">' + product.productName + '</div>';
            });
            $('#searchResult').html(resultHtml).show();
        } else {
            resultHtml = "<div>No products found</div>";
            // $('#searchResult').html(resultHtml).hide()
setTimeout(() => {
    
    document.getElementById("searchResult").style.display="none"
}, 2000);
        }
        
        $('#searchResult').html(resultHtml);
        
    }

    function displaySearchError(message) {
        $('#searchResult').html('<div class="search-error">' + message + '</div>');
    }

    $(document).on('click', '.product', function() {
        var productId = $(this).data('id');
        window.location.href = "/shopProduct?id=" + productId;
    });

    const debounceSearchProduct = debounce(searchProduct, 300);

    searchProductInput.on("keyup", function() {
        debounceSearchProduct($(this).val());
    });
});

    </script>